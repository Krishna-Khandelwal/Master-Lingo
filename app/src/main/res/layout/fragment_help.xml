<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.help.HelpFragment">

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/heebo_black"
        android:paddingStart="30dp"
        android:text="About"
        android:textColor="#000000"
        android:textSize="30sp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:padding="20dp"
        android:rowCount="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/name_tag"
                android:fontFamily="@font/nunito_semibold"
                android:text="Name: "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/name"
                android:fontFamily="@font/nunito_semibold"
                android:text="Master Lingo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/email_tag"
                android:fontFamily="@font/nunito_semibold"
                android:text="Email: "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/email"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/Email"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/creator_tag"
                android:fontFamily="@font/nunito_semibold"
                android:text="Creators: "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/creator"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/creator_names"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"/>

        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@drawable/ic_menu_email"
        android:layout_marginTop="20dp"
        android:text="Get Help!"/>

</LinearLayout>